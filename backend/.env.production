# AdNabbit Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Stripe Configuration
STRIPE_SECRET_KEY=your_live_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_live_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_webhook_secret_here

# Stripe Price IDs (use your live Price IDs for production)
STRIPE_PRICE_BASIC=your_live_basic_price_id
STRIPE_PRICE_STANDARD=your_live_standard_price_id
STRIPE_PRICE_PREMIUM=your_live_premium_price_id

# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration
DATABASE_URL=your_production_database_url

# CORS Configuration
ALLOWED_ORIGINS=https://adnabbit.com,https://www.adnabbit.com

# Logging
LOG_LEVEL=info